<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScrollView" parent="MatchParent">
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="RecyclerView" parent="MatchWidth">
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ParentContent" parent="MatchParent">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalView" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerticalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MatchConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HorizontalGuideLine" parent="WrapContent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalGuideLine" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>