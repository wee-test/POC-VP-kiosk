<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FRAGMENT-->
    <style name="Fragment" />

    <!--DIALOG-->
    <style name="Dialog" />

    <!--TEXT VIEW-->
    <style name="TextView" parent="WrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
    </style>

    <style name="TextView.PlaceHolder">
         <item name="android:textSize">@dimen/_24ssp</item>
         <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="TextView">
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/drw_btn_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="ImageView" />

</resources>