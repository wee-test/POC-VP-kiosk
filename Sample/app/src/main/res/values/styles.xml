<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--FRAGMENT-->
    <style name="Fragment" />

    <!--DIALOG-->
    <style name="Dialog" />

    <!--TEXT VIEW-->
    <style name="TextView"
        parent="WrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/svn_gilroy_regular</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextView.PlaceHolder">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.FragmentTitle">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
    </style>

    <style name="TextView.FragmentSubTitle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>



    <style name="TextView.Rating">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray100</item>
        <item name="fontFamily">@font/svn_gilroy_medium</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white100</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
    </style>

    <style name="TextView.RatingItem">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/svn_gilroy_regular</item>
    </style>

    <style name="Button"
        parent="TextView">
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="background">@drawable/bg_gradient_rounded</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawableEnd">@drawable/ic_bigger</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/svn_gilroy_bold</item>
        <item name="android:paddingStart">@dimen/margin2</item>
        <item name="android:paddingEnd">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin3</item>
        <item name="android:layout_marginEnd">@dimen/margin3</item>
    </style>

    <style name="EditText"
        parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:longClickable">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColorHint">#BEBEBE</item>
        <item name="android:maxLength">256</item>
        <item name="android:background">@null</item>
        <item name="android:importantForAutofill"
            tools:targetApi="o">no</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="ImageView" />

    <!--DIALOG-->
    <style name="Dialog.BottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_200sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="Dialog.Title"
        parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_54sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/_54sdp</item>
        <item name="android:layout_height">@dimen/_54sdp</item>
        <item name="android:padding">@dimen/_22sdp</item>
        <item name="android:tint">#424242</item>
    </style>

    <style name="ButtonAdv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin4</item>
        <item name="android:layout_marginEnd">@dimen/margin4</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <!--OCR-->
    <style name="OCR" />

    <style name="OCR.ImageCapture">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:background">@mipmap/frame_ocr</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">@string/cardRatio</item>

    </style>
    <!--<item name="riv_border_width">@dimen/_2sdp</item>
    <item name="riv_corner_radius">@dimen/_9sdp</item>-->
    <style name="OCR.ImageTrash">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:src">@drawable/ic_trash</item>
        <item name="android:layout_marginTop">@dimen/marginY2</item>
        <item name="android:layout_marginEnd">@dimen/marginY2</item>
    </style>

    <style name="OCR.Camera">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_200sdp</item>
        <item name="android:layout_marginTop">@dimen/margin2</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="layout_constraintDimensionRatio">w,16:9</item>
    </style>

    <style name="OCR.ImageResult">
        <item name="android:layout_width">@dimen/_160sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">invisible</item>
        <item name="layout_constraintDimensionRatio">h,403:252</item>
    </style>

    <!--App custom view-->
    <style name="InputView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#A3A3A3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:minWidth">@dimen/_24sdp</item>
    </style>

    <style name="ReceiveRadio"
        parent="MatchWidth">
        <item name="android:background">@drawable/drw_receive_radio</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="UIPaymentNumber"
        parent="TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#FAFF00</item>
        <item name="android:ellipsize">end</item>
        <item name="lineHeight">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
    </style>

    <style name="UIPayment"
        parent="TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="lineHeight">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/svn_gilroy_regular</item>
    </style>

    <!--Card receive method-->

    <style name="CardMethod.Title"
        parent="TextView">
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">#191919</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/svn_gilroy_bold</item>
    </style>

    <style name="CardMethod.MethodContent"
        parent="TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black60</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/svn_gilroy_regular</item>
    </style>
</resources>