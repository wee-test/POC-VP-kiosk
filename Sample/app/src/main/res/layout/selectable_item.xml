<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectableView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:clickable="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectableTextViewItem"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/drw_underline"
        android:clickable="false"
        android:gravity="center_vertical"
        android:maxLines="4"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectableImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item text goes here" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selectableImageView"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_34sdp"
        android:clickable="false"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_placeholder"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>