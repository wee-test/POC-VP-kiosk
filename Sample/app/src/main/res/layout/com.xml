<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollView"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/MatchWidth"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <wee.digital.sample.widget.TextHorizontalView
                style="@style/MatchWidth"
                android:src="@drawable/ic_placeholder"
                android:text="Hello"
                android:title="TextHorizontalView" />

            <wee.digital.sample.widget.TextVerticalView
                style="@style/MatchWidth"
                android:layout_marginTop="@dimen/_32sdp"
                android:src="@drawable/ic_placeholder"
                android:text="Hello"
                android:title="TextHorizontalView" />

            <wee.digital.sample.widget.TextInputView
                style="@style/MatchWidth"
                android:layout_marginTop="@dimen/_32sdp"
                android:hint="TextHorizontalView"
                android:src="@drawable/ic_placeholder"
                android:text="Hello" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comRecycler"
                android:layout_marginHorizontal="@dimen/margin"
                android:layout_marginTop="@dimen/margin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/comViewNext"
        style="@style/Button.Primary"
        android:layout_margin="@dimen/_8sdp"
        android:text="Next" />

</androidx.appcompat.widget.LinearLayoutCompat>