<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reviewInfoGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoDateBirth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        android:text="01/01/1992"
        android:title="Ngày sinh"
        app:layout_constraintEnd_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoNumberNid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_card"
        android:text="241567898"
        android:title="Số CMND"
        app:layout_constraintEnd_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewInfoDateBirth" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoDateExpiration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_date"
        android:text="01/01/1992"
        android:title="Ngày hết hạn"
        app:layout_constraintEnd_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewInfoNumberNid" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        android:text="Nữ"
        android:title="Giới tính"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintTop_toTopOf="parent" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoDateRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_date"
        android:text="01/01/1992"
        android:title="Ngày cấp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintTop_toBottomOf="@+id/reviewInfoGender" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoIssued"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="CA TP.HCM"
        android:title="Nơi cấp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reviewInfoGuide1"
        app:layout_constraintTop_toBottomOf="@+id/reviewInfoDateRange" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/reviewInfoDomicile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="Phường 4, Quận 9, TP Hồ Chí Minh"
        android:title="Nguyên quán"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewInfoIssued" />

</androidx.constraintlayout.widget.ConstraintLayout>