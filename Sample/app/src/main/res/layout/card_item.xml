<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp">

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintDimensionRatio="w,138:175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cardImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/colorWhite"
        android:scaleType="fitXY"
        android:src="@mipmap/card1"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintDimensionRatio="w,131:83"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cardTextViewTitle"
        style="@style/TextView"
        android:text="VPBank Platinum\nCashback"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/margin2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardImageView"
        app:layout_constraintTop_toBottomOf="@+id/cardImageView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

</androidx.constraintlayout.widget.ConstraintLayout>