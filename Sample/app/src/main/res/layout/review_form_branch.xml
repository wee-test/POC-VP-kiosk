<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/formBranchIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/bg_oval"
        android:backgroundTint="@color/green10"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_bank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/formBranchTitle"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin"
        android:fontFamily="@font/svn_gilroy_bold"
        android:text="Nhận thẻ tại chi nhánh"
        app:layout_constraintBottom_toBottomOf="@+id/formBranchIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formBranchIcon"
        app:layout_constraintTop_toTopOf="@+id/formBranchIcon" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formBranchRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin3"
        android:src="@drawable/ic_bank"
        android:text="PGD Bàu Cát"
        android:title="Chi nhánh nhận"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formBranchIcon" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formBranchAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="33 Trương Công Định, phường 14, Tân Bình,TP. HCM"
        android:title="Địa chỉ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formBranchRoom" />

</androidx.constraintlayout.widget.ConstraintLayout>