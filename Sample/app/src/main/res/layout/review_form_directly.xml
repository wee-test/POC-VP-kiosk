<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/formDirectlyIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/bg_oval"
        android:backgroundTint="@color/green10"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_directly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/formDirectlyTitle"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin"
        android:fontFamily="@font/svn_gilroy_bold"
        android:text="Nhận thẻ trực tiếp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/formDirectlyIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formDirectlyIcon"
        app:layout_constraintTop_toTopOf="@+id/formDirectlyIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Medium"
        android:layout_marginTop="@dimen/margin3"
        android:text="Thẻ sẽ được in trực tiếp từ thiết bị. Thời gian in thẻ từ 3-5 phút.\n\nTrong trường hợp xảy ra sự cố không nhận được thẻ. Bạn vui lòng liên hệ đến hotline: 1900545415 để được hỗ trợ chi tiết."
        android:layout_width="match_parent"
        android:fontFamily="@font/svn_gilroy_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formDirectlyTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>