<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1Layout"
    android:layout_width="1014px"
    android:layout_height="642px"
    android:visibility="invisible"
    tools:visibility="visible"
    android:background="@mipmap/print_blue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card1FrontFacePay"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin2"
        android:layout_marginTop="@dimen/marginY2"
        android:src="@mipmap/facepay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card1FrontNapas"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginY2"
        android:layout_marginEnd="@dimen/margin2"
        android:src="@mipmap/napas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card1TextViewNumber"
        android:text="3435 4262 7310 2720"
        android:layout_width="match_parent"
        android:gravity="center"
        android:fontFamily="@font/svn_gilroy_semi_bold"
        style="@style/TextView.Title"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Large"
        android:layout_marginStart="@dimen/margin2"
        android:layout_marginBottom="@dimen/marginY2"
        android:fontFamily="@font/svn_gilroy_regular"
        android:text="Card Holder Name"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/card1TextViewName"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card1TextViewName"
        style="@style/TextView.Large"
        android:layout_marginStart="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin3"
        android:fontFamily="@font/inter600"
        android:text="Nguyen Van A"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Large"
        android:layout_marginEnd="@dimen/margin2"
        android:layout_marginBottom="@dimen/marginY2"
        android:fontFamily="@font/svn_gilroy_regular"
        android:text="Expiry Date"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/card1TextViewName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card1TextViewDate"
        style="@style/TextView.Large"
        android:layout_marginEnd="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin3"
        android:fontFamily="@font/svn_gilroy_bold"
        android:text="02/30"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>