<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formHomeGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/formHomeIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/bg_oval"
        android:backgroundTint="@color/green10"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/formHomeTitle"
        style="@style/TextView.Title"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin"
        android:fontFamily="@font/svn_gilroy_bold"
        android:text="Nhận thẻ tại nhà"
        app:layout_constraintBottom_toBottomOf="@+id/formHomeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formHomeIcon"
        app:layout_constraintTop_toTopOf="@+id/formHomeIcon" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formHomeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_user"
        android:text="Trần Thị Toàn"
        android:title="Tên người nhận"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formHomeIcon" />

    <wee.digital.sample.widget.TextVerticalView
    android:id="@+id/formHomePhone"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:src="@drawable/ic_phone"
    android:text="0767006210"
    android:title="SĐT người nhận"
    app:layout_constraintEnd_toStartOf="@+id/formHomeGuide"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/formHomeName" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formHomeProvince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="0767006210"
        android:title="Tân Bình"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/formHomeGuide"
        app:layout_constraintTop_toBottomOf="@+id/formHomeName"/>

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formHomeDistrict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="0767006210"
        android:title="Tân Bình"
        app:layout_constraintEnd_toStartOf="@+id/formHomeGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formHomePhone" />

    <wee.digital.sample.widget.TextVerticalView
        android:id="@+id/formHomeWard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_location"
        android:text="Phường 8"
        android:title="Phường xã"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/formHomeGuide"
        app:layout_constraintTop_toBottomOf="@+id/formHomeProvince"/>

</androidx.constraintlayout.widget.ConstraintLayout>